<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>         
    <% if @pin.image.attached? %>
      <%= image_tag(@pin.medium_image) %>
    <% elsif "#{@pin.category.name}" == "rails" %>
      <%= image_tag('rails-logo-thumbnail.png') %>
    <% elsif "#{@pin.category.name}" == "ruby" %>
      <%= image_tag('ruby-logo-thumbnail.png') %>
    <% end %>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
</div>
<br/>
<a href="/">
  <i class="fa fa-arrow-left"></i>
  Back to Home
</a>
